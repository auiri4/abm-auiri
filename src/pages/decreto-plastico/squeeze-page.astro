  <style>
    @import url('https://fonts.googleapis.com/css2?family=Sora:wght@400;600;700;800&family=Inter:wght@400;500;600&display=swap');

    :root {
      --color-teal: #5499a3;
      --color-orange: #eaab75;
      --color-dark-teal: #3d616f;
      --color-accent: #07f2ea;
      --color-white: #ffffff;
      --color-light-bg: #f8fafb;
      --color-text-dark: #1a1a1a;
      --color-text-gray: #666666;
      
      --font-display: 'Sora', sans-serif;
      --font-body: 'Inter', sans-serif;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    .squeeze-page {
      min-height: 100vh;
      background: var(--color-light-bg);
      font-family: var(--font-body);
      color: var(--color-text-dark);
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    /* Hero Section */
    .hero {
      padding: 4rem 0 6rem;
      background: linear-gradient(135deg, #f8fafb 0%, #eef5f7 100%);
      position: relative;
      overflow: hidden;
    }

    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 50%;
      height: 100%;
      background: linear-gradient(135deg, transparent 0%, rgba(7, 242, 234, 0.05) 100%);
      pointer-events: none;
    }

    .hero-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 4rem;
      align-items: start;
      position: relative;
      z-index: 1;
    }

    .label {
      display: inline-block;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: var(--color-text-gray);
      margin-bottom: 1rem;
    }

    .hero-title {
      font-family: var(--font-display);
      font-size: 3rem;
      font-weight: 800;
      line-height: 1.1;
      margin-bottom: 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .title-teal {
      color: var(--color-teal);
    }

    .title-dark {
      color: var(--color-text-dark);
    }

    .hero-subtitle {
      font-size: 1.125rem;
      line-height: 1.7;
      color: var(--color-text-gray);
      margin-bottom: 2rem;
    }

    .highlight-box {
      background: var(--color-white);
      border-left: 4px solid var(--color-orange);
      padding: 1.5rem;
      display: flex;
      gap: 1rem;
      border-radius: 8px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    }

    .highlight-icon {
      font-size: 2rem;
      flex-shrink: 0;
    }

    .highlight-title {
      font-family: var(--font-display);
      font-size: 1.125rem;
      font-weight: 700;
      color: var(--color-orange);
      margin-bottom: 0.5rem;
    }

    .highlight-text {
      font-size: 0.95rem;
      line-height: 1.6;
      color: var(--color-text-dark);
    }

    .highlight-text strong {
      color: var(--color-teal);
      font-weight: 600;
    }

    /* Form Card */
    .form-card {
      background: var(--color-white);
      border-radius: 12px;
      padding: 2.5rem;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
      position: sticky;
      top: 2rem;
    }

    .form-title {
      font-family: var(--font-display);
      font-size: 1.75rem;
      font-weight: 700;
      color: var(--color-text-dark);
      margin-bottom: 0.5rem;
    }

    .form-subtitle {
      color: var(--color-text-gray);
      font-size: 0.95rem;
      margin-bottom: 1.5rem;
    }

    /* Stats Section */
    .stats-section {
      padding: 4rem 0;
      background: var(--color-dark-teal);
      color: var(--color-white);
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 3rem;
    }

    .stat-card {
      text-align: center;
    }

    .stat-icon {
      color: var(--color-accent);
      margin-bottom: 1rem;
      display: flex;
      justify-content: center;
    }

    .stat-value {
      font-family: var(--font-display);
      font-size: 2.5rem;
      font-weight: 800;
      color: var(--color-white);
      margin-bottom: 0.5rem;
    }

    .stat-label {
      font-size: 0.9rem;
      line-height: 1.4;
      color: rgba(255, 255, 255, 0.9);
    }

    /* Benefits Section */
    .benefits-section {
      padding: 5rem 0;
      background: var(--color-white);
    }

    .benefits-grid {
      display: grid;
      grid-template-columns: 1fr 1.5fr;
      gap: 4rem;
      align-items: start;
    }

    .benefits-title {
      font-family: var(--font-display);
      font-size: 2rem;
      font-weight: 700;
      color: var(--color-teal);
      margin-bottom: 1rem;
      line-height: 1.2;
    }

    .benefits-intro {
      font-size: 1rem;
      line-height: 1.7;
      color: var(--color-text-gray);
    }

    .benefits-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .benefit-item {
      display: flex;
      gap: 1rem;
      padding: 1.25rem;
      background: var(--color-light-bg);
      border-radius: 8px;
      border-left: 3px solid var(--color-accent);
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .benefit-item:hover {
      transform: translateX(4px);
      box-shadow: 0 4px 16px rgba(7, 242, 234, 0.15);
    }

    .benefit-check {
      color: var(--color-accent);
      font-size: 1.5rem;
      font-weight: 700;
      flex-shrink: 0;
    }

    .benefit-text {
      font-size: 0.95rem;
      line-height: 1.6;
      color: var(--color-text-dark);
    }

    .benefit-text strong {
      font-weight: 600;
      color: var(--color-teal);
    }

    /* Footer */
    .footer {
      padding: 3rem 0;
      background: var(--color-dark-teal);
      color: var(--color-white);
    }

    .footer-content {
      text-align: center;
    }

    .footer-logo {
      height: 48px;
      margin-bottom: 1rem;
      filter: brightness(0) invert(1);
    }

    .footer-tagline {
      font-size: 0.95rem;
      color: rgba(255, 255, 255, 0.9);
      margin-bottom: 1rem;
    }

    .footer-contact {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1rem;
      flex-wrap: wrap;
      margin-bottom: 1rem;
    }

    .footer-contact a {
      color: var(--color-accent);
      text-decoration: none;
      font-size: 0.9rem;
      transition: opacity 0.2s ease;
    }

    .footer-contact a:hover {
      opacity: 0.8;
    }

    .separator {
      color: rgba(255, 255, 255, 0.4);
    }

    .footer-copyright {
      font-size: 0.85rem;
      color: rgba(255, 255, 255, 0.7);
    }

    /* Responsive */
    @media (max-width: 968px) {
      .hero-grid,
      .stats-grid,
      .benefits-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .hero-title {
        font-size: 2.25rem;
      }

      .form-card {
        position: static;
      }

      .stats-grid {
        grid-template-columns: repeat(2, 1fr);
      }

      .footer-contact {
        flex-direction: column;
        gap: 0.5rem;
      }

      .separator {
