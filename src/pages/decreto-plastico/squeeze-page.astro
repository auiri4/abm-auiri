      }

      .hero-title {
        font-size: 1.75rem;
      }

      .stats-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
      }

      .stat-value {
        font-size: 2rem;
      }

      .benefits-title {
        font-size: 1.5rem;
      }
    }
  </style>
</BaseLayout>